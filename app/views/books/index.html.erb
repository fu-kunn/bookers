<p id="notice"><%= notice %></p>

<head>
 <h2>Books</h2>
</head>

<body>

 <table>
  <thead>
   <tr>
    <th>Title</th>
    <th>Body</th>
   </tr>
  </thead>

 <tbody>
  <% @books.each do |book| %>
   <tr>
    <td><%= book.title %></td>
    <td><%= book.body %></td>
    <td>
     <%= link_to "Show", book_path(book.id) %>
    </td>
    <td>
     <%= link_to "Edit", edit_book_path(book.id) %>
    </td>
    <td>
     <%= link_to "Destroy", destroy_book_path(book.id), method: :delete, "data-confirm" => "Are you sure?"  %>
    </td>
   </tr>
  <% end %>

 </tbody>
</table>



<h3>New book</h3>
<%= form_with model: Book.new, local:true do |f| %>

<% if @book.errors.any? %>
  <%= @book.errors.count %>error prohibited this book from being saved:
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
<% end %>

<div class="field">
  <h4>Title</h4>
  <label for="book"><%= f.text_field :title %></label>
</div>

<div class="field">
  <h4>Body</h4>
  <label for="book_body"><%= f.text_area :body %></label>
</div>

<div class="actions">
  <%= f.submit 'Create Book' %>
</div>

<% end %>
</body>